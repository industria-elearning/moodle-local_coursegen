{{!
    @template local_datacurso/course_streaming_inline

    Inline streaming block for course planning messages. Renders a progress
    indicator and a container where streaming events are appended.
}}
<div class="mt-3">
  <!-- Progress Indicator (scoped) -->
  <div data-region="local_datacurso/course_streaming/progress" class="card mb-3" style="display: none;">
    <div class="card-body py-2">
      <div class="d-flex align-items-center">
        <div data-region="local_datacurso/course_streaming/progress/icon" class="mr-3">
          <div class="spinner-border text-primary" role="status" style="width: 1.25rem; height: 1.25rem;">
            <span class="sr-only">Loading...</span>
          </div>
        </div>
        <div>
          <h6 class="mb-0">{{#title}}{{title}}{{/title}}{{^title}}Planificando la creaci√≥n del curso{{/title}}</h6>
          <small class="text-muted">{{#subtitle}}{{subtitle}}{{/subtitle}}{{^subtitle}}Generando contenido del plan de estudios...{{/subtitle}}</small>
        </div>
      </div>
    </div>
  </div>

  <!-- Streaming events container (scoped) -->
  <div data-region="local_datacurso/course_streaming"></div>
</div>

{{!
    @template local_datacurso/add_course_ai_modal

    Course AI Modal Template

    Template for the course AI generation modal interface.
    Contains chat interface for AI-powered course creation.
}}
<div class="local_datacurso_course_chat pb-4 container" aria-label="{{#str}} addcourseai_arialabel, local_datacurso {{/str}}">
    <!-- Planning Phase Collapsible Section -->
    <div id="planning-phase-section">
        {{> local_datacurso/course_streaming}}

        <!-- Planning action buttons (hidden by default) -->
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div id="course-planning-actions" class="mt-4" style="display: none;">
                    <button id="accept-planning-btn" class="btn btn-sm btn-primary me-2" type="button">
                        {{#str}} accept_planning_create_course, local_datacurso {{/str}}
                    </button>
                    <button id="adjust-planning-btn" class="btn btn-sm btn-outline-secondary" type="button">
                        {{#str}} adjust_course_planning, local_datacurso {{/str}}
                    </button>
                </div>
            </div>
        </div>

        <!-- Chat interface (hidden by default) -->
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div id="course-chat-interface" class="mt-4 mb-2" style="display: none;">
                    <form id="course-chat-form">
                        <label class="sr-only" for="courseChatInput">{{#str}} enter_message, local_datacurso {{/str}}</label>
                        <div class="local_datacurso_ai_input_group">
                            <textarea id="courseChatInput" class="form-control local_datacurso_ai_textarea" rows="2"
                                placeholder="{{#str}} planning_chat_placeholder, local_datacurso {{/str}}" required></textarea>

                            <button class="local_datacurso_ai_send" type="submit" title="{{#str}} send, local_datacurso {{/str}}">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="18" height="18" fill="currentColor">
                                    <path d="M2 21l21-9L2 3v7l15 2-15 2v7z"/>
                                </svg>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Collapsed Planning Summary (hidden by default) -->
    <div id="planning-summary-collapsed" class="mb-3" style="display: none;">
        <div class="card">
            <div class="card-header bg-light">
                <button class="btn btn-link text-decoration-none p-0 w-100 text-start" type="button" id="toggle-planning-details">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <i class="fa fa-check-circle text-success me-2"></i>
                            <strong>{{#str}} planning_completed, local_datacurso {{/str}}</strong>
                            <small class="text-muted ms-2">{{#str}} click_to_view_details, local_datacurso {{/str}}</small>
                        </div>
                        <i class="fa fa-chevron-down" id="planning-toggle-icon"></i>
                    </div>
                </button>
            </div>
            <div class="collapse" id="planning-details-collapse">
                <div class="card-body" id="planning-details-content">
                    <!-- Planning content will be moved here -->
                </div>
            </div>
        </div>
    </div>

    <!-- Execution Phase Container -->
    <div id="execution-phase-container">
        <!-- Execution content will be added here -->
    </div>
</div>

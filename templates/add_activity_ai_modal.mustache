{{!
    @template aiplacement_coursegen/add_activity_ai_modal

    Activity AI Modal Template

    Template for the activity AI generation modal interface.
    Contains chat interface for AI-powered activity creation with integrated streaming.

    Example context (json):
    {
        "courseid": 123,
        "coursename": "Mathematics 101",
        "sectionnum": 1
    }
}}
<div class="aiplacement_coursegen_ai_chat pb-4 container" aria-label="{{#str}} addactivityai_arialabel, aiplacement_coursegen {{/str}}">
    <!-- Welcome Message -->
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="activity-welcome-message p-3 mb-3 bg-light rounded">
                <p class="mb-0">{{#str}} addactivityai_welcome, aiplacement_coursegen {{/str}}</p>
            </div>
        </div>
    </div>

    <!-- User Messages Section -->
    <div class="row justify-content-center">
        <div id="activity-user-messages" class="col-lg-10" style="display: none;">
            <!-- User messages will be added here -->
        </div>
    </div>

    <!-- Streaming Phase Section -->
    <div class="row justify-content-center">
        <div id="activity-streaming-section" class="col-lg-10" style="display: none;">
            {{> aiplacement_coursegen/course_streaming_inline}}
        </div>
    </div>
</div>



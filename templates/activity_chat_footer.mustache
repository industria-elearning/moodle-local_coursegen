{{!
    @template local_datacurso/activity_chat_footer

    Activity Chat Footer Template

    Template for the chat interface that appears in the modal footer.
    Contains form for activity AI generation with image options.
}}
<div class="col-lg-10">
    <div id="activity-chat-interface" class="py-3 w-100">
    <form class="local_datacurso_ai_input" novalidate>
        
        <!-- Radios arriba -->
        <div style="gap: .8rem;" class="mb-2 d-flex align-items-center">
            <label style="gap: .3rem;" class="mb-0 d-flex align-items-center">
                <input type="radio" name="generate_images" value="0" checked>
                {{#str}} noimages, local_datacurso {{/str}}
            </label>
            <label style="gap: .3rem;" class="mb-0 d-flex align-items-center">
                <input type="radio" name="generate_images" value="1">
                {{#str}} yesimages, local_datacurso {{/str}}
            </label>
        </div>

        <!-- Input de texto y botÃ³n igual que antes -->
        <label class="sr-only" for="bdaiPrompt">{{#str}} addactivityai_label, local_datacurso {{/str}}</label>
        <div class="local_datacurso_ai_input_group">
            <textarea id="bdaiPrompt" class="form-control local_datacurso_ai_textarea" rows="2"
                placeholder="{{#str}} addactivityai_placeholder, local_datacurso {{/str}}" required></textarea>

            <button class="local_datacurso_ai_send" type="submit" title="{{#str}} send, local_datacurso {{/str}}">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="18" height="18" fill="currentColor">
                    <path d="M2 21l21-9L2 3v7l15 2-15 2v7z"/>
                </svg>
            </button>
        </div>
    </form>
    </div>
</div>
